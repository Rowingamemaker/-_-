/**music.wxss**/

.music {
  width: 100rpx;
  height: 100rpx;
  display: block;
  padding: 0;
  background-size: cover;
  position: fixed;
  right: 15rpx;
  bottom: 100rpx;
  border-radius: 50%;
  z-index: 999;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.searchMusci {
  width: 100%;
  text-align: center;
}

.searchMusci input {
  text-align: left;
  height: 2rem;
  width: 75%;
  border: 0.1rem solid #ccc;
  display: inline-block;
  border-radius: 0.2rem;
  padding: 0.5rem;
}

.musicscroll {
  text-align: center;
  width: 100%;
  height: 15rem;
  padding-bottom: 2.5rem;
}

.musicscroll .musiclist {
  height: 1.5rem;
  line-height: 1.5rem;
  padding: 0.5rem 1rem;
  width: 70%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  text-align: left;
  border: 1px solid #ccc;
  margin: 0.5rem auto;
  border-radius: 0.2rem;
}

.playshow {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 4rem;
  text-align: center;
}

.playshow audio {
  width: 80%;
}

.scBtn {
  background-color: #48c23d;
  color: #fff;
}
