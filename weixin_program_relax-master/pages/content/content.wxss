/* pages/content/content.wxss */

.box{
    margin-bottom: 130rpx;
}

/*标题和图片内容*/

.content-name {
  align-items: center;
}

.content-img {
  align-items: center;
}

/*///////////2017年6月17日15:47:38 .replies*/

.bottom {
  position: fixed;
  bottom: 0;
  width: 100vw;
}


/*///////////////////*/

.replies {
  border-top: 1px solid #ddd;
}

.replies-item {
  padding: 40rpx 0;
  border-bottom: 1px solid #eee;
}

.reply-owner {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.reply-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-right: 30rpx;
}

.reply-name, .reply-time, .reply-content {
  font-size: 14px;
  color: #999;
}

.reply-time {
  margin-left: 30rpx;
  color: #ccc;
}

.reply-content {
  padding: 0 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: normal;
  color: #999;
}
.send{
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  background: #fff;
  box-sizing: border-box;
}
.send-text{
  position: relative;
  width: 80%;
  float: left;
  height: 100%;
}
.send-text-box{
  float: left;
  height: 70rpx;
  box-sizing: border-box;
  margin-left: 15rpx;
  margin-top: 15rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
}
.send-text-box input{
  position: absolute;
  height: 70rpx;
  left: 0;
  top: 50%;
  margin-top: -35rpx;
  display: block;
  padding-left: 10rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  width: 80%;
}
/*删除按钮*/
.send-text image{
  position:absolute;
  right: 5rpx;
  top: 50%;
  margin-top: -25rpx;
  border-radius: 50%;
  border: 0;
  background: #fff;
  width: 50rpx;
  height: 50rpx;
}
/*发送按钮*/
.send-btn{
  width: 15%;
  float: right;
  height: 70rpx;
  margin: 15rpx;
  padding: 0;
  line-height: 70rpx;
  background: #1AAD19;
  color: #fff;
  border: 1px solid #e3e3e3;
  font-size: 30rpx;
}